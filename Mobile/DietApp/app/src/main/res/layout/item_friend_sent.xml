<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <ImageView
        android:id="@+id/friends_list_item_sent_image"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/img_avatar"
        android:contentDescription="@string/description_user_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/friends_list_item_sent_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:paddingLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/friends_list_item_sent_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/friends_list_item_sent_button_accept"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:clickable="false"
        android:enabled="false"
        android:backgroundTint="@color/colorPrimaryLight"
        android:text="@string/button_text_friend_invitation_sent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/friends_list_item_sent_image"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>